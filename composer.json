{
  "name": "lodipay/payum-qpay",
  "type": "project",
  "description": "The Payum extension. Rapid extensino development",
  "keywords": [
    "payment"
  ],
  "homepage": "https://github.com/tsetsee/payum-qpay",
  "license": "MIT",
  "authors": [
    {
      "name": "Tsetsentsengel Munkhbayar",
      "email": "tsetsee.yugi@gmail.com"
    }
  ],
  "require": {
    "payum/core": "^1.5",
    "php-http/httplug": "^1.1",
    "webmozart/assert": "^1.11",
    "lodipay/qpay-php-api": "^1.0"
  },
  "require-dev": {
    "php-http/guzzle6-adapter": "^1.0",
    "symfony/phpunit-bridge": "^7.0",
    "symfony/var-dumper": "^6.4.0",
    "symfony/property-info": "^6.0.0",
    "friendsofphp/php-cs-fixer": "^3.40",
    "phpstan/phpstan": "^1.10"
  },
  "config": {
    "bin-dir": "bin"
  },
  "autoload": {
    "psr-4": {
      "Tsetsee\\PayumQPay\\": "src/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.6-dev"
    }
  },
  "scripts": {
    "test": [
      "@fixer",
      "@phpstan",
      "simple-phpunit"
    ],
    "phpstan": "phpstan analyze",
    "fixer": "php-cs-fixer fix"
  }
}
